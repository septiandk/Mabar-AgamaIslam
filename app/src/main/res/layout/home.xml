<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.book.dk.PAI.HomeActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:background="@color/main"/>
    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/center_image"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/welcome"
        android:layout_marginTop="@android:dimen/app_icon_size"
        android:layout_marginBottom="20dp"
        android:src="@drawable/bg_home"
        app:civ_border_color="@color/light"
        app:civ_border_width="20dp"
        />
    <RelativeLayout
        android:id="@+id/welcome"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:id="@+id/set1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/activity_horizontal_margin"
            android:text="Selamat"
            android:textSize="70sp"
            android:textStyle="bold"
            android:shadowColor="@color/dark"
            android:shadowRadius="5"
            android:textColor="@color/light"
            />

        <TextView
            android:id="@+id/set2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/set1"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_alignParentRight="true"
            android:shadowColor="@color/dark"
            android:shadowRadius="5"
            android:text="Datang"
            android:textColor="#ffe45c"
            android:textSize="70sp"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/welcome_line"
        android:layout_width="300dp"
        android:layout_height="15dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/rounded_rectangle_icon"
        android:layout_below="@id/welcome"
        />

    <Button
        android:clickable="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:id="@+id/mymenu"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_rectangle_btn2"
        android:text="@string/mulai"
        android:textSize="25sp"
        android:textStyle="bold"/>









</RelativeLayout>